// view post page in WordPress frontend

// overlay for the LaterPay purchase dialogs ---------------------------------------------------------------------------
.yui3-widget-mask
    background-color                    hsl(0, 0%, 0%)
    height                              100%
    left                                0
    opacity                             0.89
    position                            fixed
    top                                 0
    width                               100%
    z-index                             $zindex-topmost_1

.yui3-panel,
.yui3-overlay

    &:focus
        outline                         0

.lp_closebtn
    padding                             5px
    position                            fixed
    right                               0
    top                                 0

    a
        color                           hsl(0, 0%, 100%)
        padding                         0.75rem
        text-decoration                 none

.lp_status
    border                              0 none
    height                              25px
    width                               100%

// content preview mode 2: teaser + excerpt from actual content, covered by overlay ------------------------------------
.lp_paidContent
    bottom                              1em                                                         !important
    margin-bottom                       5em                                                         !important
    min-height                          500px                                                       !important
    position                            relative                                                    !important
    top                                 0                                                           !important

    // hide purchase button, if it is covered by our paid content overlay
    .lp_purchaseLinkShortcode
        display                         none                                                        !important

    // obfuscate excerpt of full post content by making it look blurred
    .lp_fullContent
        color                           transparent                                                 !important
        padding                         0.25em                                                      !important
        text-shadow                     0 0 4px hsl(0, 0%, 0%)                                      !important

    .lp_overlayText
        background-color                hsla(0, 0%, 100%, 0.89)                                     !important
        height                          100%                                                        !important
        left                            0                                                           !important
        position                        absolute                                                    !important
        top                             0                                                           !important
        width                           100%                                                        !important

        // modal-like box describing the benefits of LaterPay
        .lp_benefits
            background-clip             padding-box                                                 !important
            background                  hsl(0, 0%, 90%)                                             !important
            background                  radial-gradient(ellipse at center, hsl(0, 0%, 99%) 34%, hsl(0, 0%, 88%) 89%) !important
            border-radius               5px                                                         !important
            box-shadow                  1px 1px 4px hsla(0, 0%, 0%, 0.55)                           !important
            font-family                 Arial, sans-serif                                           !important
            font-size                   14px                                                        !important
            font-style                  normal                                                      !important
            font-weight                 normal                                                      !important
            line-height                 1.3                                                         !important
            margin                      1em auto                                                    !important
            max-width                   480px                                                       !important
            padding                     0                                                           !important
            position                    relative                                                    !important

            header
                background              hsl(135, 38%, 49%) url(../img/benefits-header.png) 50% 50% / 100% no-repeat !important
                border-radius           5px 5px 0 0                                                 !important
                left                    0                                                           !important
                padding                 1.5em 0                                                     !important
                position                relative                                                    !important
                right                   0                                                           !important
                top                     0                                                           !important

                h2
                    color               $text-inverse                                               !important
                    font-size           28px                                                        !important
                    font-weight         lighter                                                     !important
                    line-height         1.05                                                        !important
                    margin              0                                                           !important
                    overflow            hidden                                                      !important
                    text-align          center                                                      !important

                /**
                 * LaterPay logo
                 * 1. Use px values instead of em, because some browsers (e.g. IE10) don't render correct sizes
                 */
                h2 span
                    color               $text-inverse                                               !important
                    display             block                                                       !important
                    font-size           200px                                                       !important
                    height              42px                                                        !important
                    line-height         0                                                           !important
                    left                28px /* 1 */                                                !important
                    position            relative                                                    !important
                    text-align          center                                                      !important
                    top                 -84px /* 1 */                                               !important

            ul
                margin                  0.5em 1em 0                                                 !important
                padding                 0                                                           !important

            li
                background              url(../img/laterpay-icon-buy.svg) 6px 0/60px no-repeat      !important
                list-style              none                                                        !important
                margin                  0                                                           !important
                padding                 0 0 0 80px                                                  !important

                h3
                    color               hsl(135, 38%, 49%)                                          !important
                    font-size           1.25em                                                      !important
                    font-style          normal                                                      !important
                    font-weight         bold                                                        !important
                    line-height         1.3                                                         !important
                    margin              1.25em 0 0.1em                                              !important

                p
                    color               hsl(0, 0%, 53%)                                             !important
                    line-height         1.3                                                         !important
                    margin              0                                                           !important

            li.lp_benefitBuyNow
                background-image        url(../img/laterpay-icon-buy.svg)                           !important

            li.lp_benefitUseImmediately
                background-image        url(../img/laterpay-icon-read.svg)                          !important

            li.lp_benefitPayLater
                background-image        url(../img/laterpay-icon-pay.svg)                           !important

            svg.lp_teaser-overlay-icons
                fill                    hsl(135, 38%, 49%)                                          !important

            .lp_purchaseLink.lp_button
                display                 inline-block                                                !important
                float                   none                                                        !important
                margin-top              1em                                                         !important
                margin-bottom           1em                                                         !important
                margin-left             6em                                                         !important

            .lp_poweredBy
                color                   hsl(0, 0%, 73%)                                             !important
                font-size               16px                                                        !important
                left                    50%                                                         !important
                margin                  -1.5em 0 0 -7em                                             !important
                position                absolute                                                    !important

                // LaterPay logo (rendered in pseudo element from icon font)
                span
                    margin-right        -1.3em                                                      !important

                    &:before
                        color           hsl(0, 0%, 77%)                                             !important
                        font-size       6em                                                         !important
                        line-height     0                                                           !important
                        padding-left    0.05em                                                      !important
                        position        relative                                                    !important
                        top             0.43em                                                      !important


// Chrome browser hacks
@media screen and (-webkit-min-device-pixel-ratio:0)
    .lp_benefits .lp_poweredBy
        margin-top                      1.5em                                                       !important

        // LaterPay logo (rendered in pseudo element from icon font)
        span[data-icon]:before
            top                         0.08em                                                      !important


// shortcodes for linked premium files in free to read posts -----------------------------------------------------------
.lp_premiumFileBox
    background                          hsl(0, 0%, 90%) url(../img/premium-text.png) 50% 50% no-repeat
    background-size                     cover                                                       !important
    border-radius                       3px                                                         !important
    box-shadow                          1px 1px 2px hsla(0, 0%, 0%, 0.34)                           !important
    height                              300px                                                       !important
    margin                              0 10px 20px 10px                                            !important
    position                            relative                                                    !important
    width                               300px                                                       !important

    .lp_purchaseLink.lp_button,
    .lp_purchaseLinkShortcode.lp_button
        font-size                       21px                                                        !important
        margin                          0                                                           !important
        right                           0.45em                                                      !important
        top                             0.5em                                                       !important

        &:before
            font-size                   36px                                                        !important
            left                        -2px                                                        !important

.lp_contentTypeText
    background-image                    url(../img/premium-text.png)

.lp_contentTypeAudio
    background-image                    url(../img/premium-audio.png)

.lp_contentTypeVideo
    background-image                    url(../img/premium-video.png)

.lp_contentTypeGallery
    background-image                    url(../img/premium-gallery.png)

.lp_contentTypeFile
    background-image                    url(../img/premium-download.png)

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    // serve retina images for hires displays
    .lp_contentTypeText
        background-image                url(../img/premium-text_2x.png)
    .lp_contentTypeAudio
        background-image                url(../img/premium-audio_2x.png)
    .lp_contentTypeVideo
        background-image                url(../img/premium-video_2x.png)
    .lp_contentTypeGallery
        background-image                url(../img/premium-gallery_2x.png)
    .lp_contentTypeFile
        background-image                url(../img/premium-download_2x.png)

.lp_premiumFileDetails
    background-color                    hsla(0, 0%, 90%, 0.89)                                      !important
    border-radius                       0 0 2px 2px                                                 !important
    bottom                              0                                                           !important
    box-sizing                          border-box                                                  !important
    color                               hsl(0, 0%, 53%)                                             !important
    font-size                           14px                                                        !important
    font-style                          normal                                                      !important
    line-height                         1.2                                                         !important
    padding                             10px                                                        !important
    position                            absolute                                                    !important
    width                               100%                                                        !important

    h3
        color                           $text                                                       !important
        font-size                       14px                                                        !important
        font-weight                     600                                                         !important
        margin                          0                                                           !important
        overflow                        hidden                                                      !important
        text-overflow                   ellipsis                                                    !important
        white-space                     nowrap                                                      !important

    p
        margin                          0.375em 0 0                                                 !important
        max-height                      3.6em                                                       !important
        overflow                        hidden                                                      !important
        text-overflow                   ellipsis                                                    !important

.lp_premiumFileBox_wrapper .lp_premiumFileBox
    float                               left                                                        !important

// error messages displayed instead of broken shortcodes
.lp_shortcodeError
    background-color                    hsl(0, 73%, 64%)                                            !important
    border-radius                       3px                                                         !important
    color                               $text-inverse                                               !important
    margin                              1em 2em                                                     !important
    padding                             0.5em 1em                                                   !important


// LaterPay login and logout links rendered from shortcode / action ----------------------------------------------------
.lp_account-links iframe {
    background: transparent;
    margin: $fs-1;
    padding: $fs-05;
}


// Responsiveness ------------------------------------------------------------------------------------------------------
@media (max-width:567px)
    .lp_overlayText .lp_benefits
        h2
            font-size                   24px                                                        !important

        ul
            margin                      0 0.5em                                                     !important

        li br
            display                     none                                                        !important

        .lp_purchaseLink.lp_button
            margin-left                 2em                                                         !important

    .lp_paidContent
        min-height                      580px                                                       !important
